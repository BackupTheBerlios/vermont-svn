<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<xmlBlasters>
	  <xmlBlaster>
		  <prop>managerID module-manager</prop>
		  <prop>plugin/socket/hostname 127.0.0.1</prop>
		  <prop>plugin/socket/port 7607</prop>
		  <prop>queue/connection/type RAM</prop>
		  <prop>xmlBlaster/logging/configFileName log4cplus.properties</prop>
		  <prop>log4cplus.rootLogger WARN, STDOUT</prop>
		</xmlBlaster>
	</xmlBlasters>
	<preferences>
    <logfile>wkp.log</logfile>
    <logfile_output_verbosity>4</logfile_output_verbosity>
    <warning_verbosity>1</warning_verbosity>
    <accepted_source_ids>all</accepted_source_ids>
    <alarm_time>0</alarm_time>
    <endpoint_key>port protocol</endpoint_key>
  <offline_file>offlinefile.txt</offline_file>
  <output_dir>results</output_dir>
  <endpoints_to_monitor>all</endpoints_to_monitor>
  <x_frequently_endpoints>5</x_frequently_endpoints>
    <use_pca>false</use_pca>
    <pca_learning_phase>25</pca_learning_phase>
    <metrics>
      <value>packets_in</value>
      <value>packets_out</value>
      <value>bytes_in</value>
      <value>bytes_out</value>
      <value>records_in</value>
      <value>records_out</value>
      <value>bytes_in/packet_in</value>
      <value>bytes_out/packet_out</value>
      <value>packets_in/record_in</value>
      <value>packets_out/record_out</value>
      <value>bytes_in/record_in</value>
      <value>bytes_out/record_out</value>
      <value>packets_out-packets_in</value>
      <value>bytes_out-bytes_in</value>
      <value>packets_in(t)-packets_in(t-1)</value>
      <value>packets_out(t)-packets_out(t-1)</value>
      <value>bytes_in(t)-bytes_in(t-1)</value>
      <value>bytes_out(t)-bytes_out(t-1)</value>
    </metrics>
    <noise_threshold_packets>0</noise_threshold_packets>
    <noise_threshold_bytes>0</noise_threshold_bytes>
    <endpointlist_maxsize>1000000</endpointlist_maxsize>
    <stat_test_frequency>1</stat_test_frequency>
    <report_only_first_attack>true</report_only_first_attack>
    <pause_update_when_attack>3</pause_update_when_attack>
	</preferences>
  <cusum-test-params>
    <cusum_test>true</cusum_test>
    <amplitude_percentage>1.66</amplitude_percentage>
    <repetition_factor>3</repetition_factor>
    <learning_phase_for_alpha>50</learning_phase_for_alpha>
    <smoothing_constant>0.05</smoothing_constant>
  </cusum-test-params>
	<wkp-test-params>
		<wilcoxon_test>true</wilcoxon_test>
		<kolmogorov_test>true</kolmogorov_test>
		<pearson_chi-square_test>true</pearson_chi-square_test>
		<sample_old_size>100</sample_old_size>
		<sample_new_size>10</sample_new_size>
		<two_sided>false</two_sided>
		<significance_level>0.01</significance_level>
	</wkp-test-params>
</configuration>
