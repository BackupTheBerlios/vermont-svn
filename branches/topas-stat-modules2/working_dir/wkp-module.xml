<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<xmlBlasters>
	  <xmlBlaster>
		  <prop>managerID module-manager</prop>
		  <prop>plugin/socket/hostname 127.0.0.1</prop>
		  <prop>plugin/socket/port 7607</prop>
		  <prop>queue/connection/type RAM</prop>
		  <prop>xmlBlaster/logging/configFileName log4cplus.properties</prop>
		  <prop>log4cplus.rootLogger WARN, STDOUT</prop>
		</xmlBlaster>
	</xmlBlasters>
	<preferences>
	  <output_file>wkp.output</output_file>
    <accepted_source_ids>all</accepted_source_ids>
		<alarm_time>10</alarm_time>
		<warning_verbosity>1</warning_verbosity>
	  <output_verbosity>4</output_verbosity>
    <endpoint_key>protocol</endpoint_key>
    <monitored_values>
      <value>packets_in</value>
      <value>bytes_out</value>
    </monitored_values>
    <noise_threshold_packets>0</noise_threshold_packets>
    <noise_threshold_bytes>0</noise_threshold_bytes>
    <endpointlist_maxsize>1000</endpointlist_maxsize>
		<protocols>all</protocols>
	  <netmask>32</netmask>
    <ports>all</ports>
    <ip_addresses_to_monitor>all</ip_addresses_to_monitor>
		<stat_test_frequency>1</stat_test_frequency>
		<report_only_first_attack>true</report_only_first_attack>
    <pause_update_when_attack>2</pause_update_when_attack>
	</preferences>
  <cusum-test-params>
    <cusum_test>true</cusum_test>
    <amplitude_percentage>1.33</amplitude_percentage>
    <learning_phase_for_alpha>3</learning_phase_for_alpha>
    <smoothing_constant>0.115</smoothing_constant>
  </cusum-test-params>
	<wkp-test-params>
		<wilcoxon_test>true</wilcoxon_test>
		<kolmogorov_test>false</kolmogorov_test>
		<pearson_chi-square_test>false</pearson_chi-square_test>
		<sample_old_size>3</sample_old_size>
		<sample_new_size>1</sample_new_size>
		<two_sided>false</two_sided>
		<significance_level>0.05</significance_level>
	</wkp-test-params>
</configuration>
